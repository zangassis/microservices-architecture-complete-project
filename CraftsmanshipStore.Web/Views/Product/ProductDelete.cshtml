@model CraftsmanshipStore.Web.Models.ProductModel

<form asp-action="ProductDelete">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Product</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-alert-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size=20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" disabled />
            </div>

            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" disabled rows="5"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" disabled />
            </div>

             <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" class="form-control" disabled />
            </div>
            
             <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" class="form-control" disabled />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="alert-primary btn form-control">Back to list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}